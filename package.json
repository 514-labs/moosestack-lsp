{
  "name": "moosestack-lsp",
  "version": "1.0.2",
  "private": true,
  "description": "Language Server for Moose TypeScript projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/514-labs/moosestack-lsp.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r clean",
    "lint": "biome check . && cargo clippy --all-targets --workspace -- -D warnings",
    "lint:fix": "biome check --write . && cargo clippy --all-targets --workspace --fix --allow-dirty",
    "format": "biome format --write .",
    "prepare": "husky",
    "generate:clickhouse-data": "npx tsx scripts/generate-clickhouse-data.ts",
    "generate:clickhouse-data:all": "pnpm generate:clickhouse-data 25.6 && pnpm generate:clickhouse-data 25.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "c8": "^10.1.3",
    "husky": "^9.1.7",
    "lint-staged": "16.2.7",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.rs": [
      "rustfmt --edition 2021",
      "bash scripts/lint-rust.sh"
    ],
    "**/*.{ts,tsx,js,jsx,json,md}": "biome check --write --no-errors-on-unmatched"
  }
}
