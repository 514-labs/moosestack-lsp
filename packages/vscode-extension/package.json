{
  "name": "moosestack-lsp",
  "displayName": "MooseStack LSP",
  "description": "Language Server for Moose projects. Provides real-time SQL syntax validation, completions, and hover documentation for ClickHouse SQL in TypeScript and Python files.",
  "version": "1.0.2",
  "publisher": "514-labs",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "sql",
    "clickhouse",
    "moose",
    "lsp",
    "language-server",
    "typescript",
    "python"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "MooseStack LSP",
      "properties": {
        "moosestack-lsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server.",
          "scope": "window"
        },
        "moosestack-lsp.debug.port": {
          "type": "number",
          "default": 6009,
          "description": "Port for Node.js inspector when debugging the language server.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "package": "vsce package",
    "publish": "vsce publish",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@514labs/moose-lsp": "workspace:*",
    "vscode-languageclient": "^9.0.1"
  },
  "extensionDependencies": [],
  "devDependencies": {
    "@types/node": "^24.10.11",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.7.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/514-labs/moosestack-lsp.git",
    "directory": "packages/vscode-extension"
  },
  "license": "MIT"
}
