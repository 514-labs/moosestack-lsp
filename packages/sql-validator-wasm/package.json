{
  "name": "@514labs/moose-sql-validator-wasm",
  "version": "0.1.0",
  "description": "WASM SQL validator for ClickHouse dialect",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/514-labs/moosestack-lsp.git",
    "directory": "packages/sql-validator-wasm"
  },
  "keywords": [
    "wasm",
    "sql",
    "validator",
    "clickhouse",
    "parser"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "pkg"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:wasm": "cd ../sql-validator && wasm-pack build --target nodejs --out-dir ../sql-validator-wasm/pkg",
    "build:ts": "tsup",
    "build": "pnpm run build:wasm && pnpm run build:ts",
    "test": "node --test --experimental-wasm-modules dist/index.test.js",
    "test:coverage": "c8 --reporter=text --reporter=lcov node --test --experimental-wasm-modules dist/index.test.js",
    "clean": "rm -rf dist pkg coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0"
  }
}
